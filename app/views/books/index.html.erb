
<!--<div class="alert alert-%= message_type %>"></div>-->
<div class="notice"><%= flash[:complete] %></div>


<div class="container">
<div class="row">
<div class="col-md-3">

<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>


</div>

<div class="col-md-8 offset-md-1">
 <h3>Books</h3>
  <table class="table table-striped">
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th></th>
  <th></th>
  </tr>

  <% @books.each do |book|%>
  <tr>
  <td>
  <%= link_to user_path(book.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
  <% end %>
  </td>

  <td><%= link_to book.title , book_path(book.id) , class:'btn btn-link' %></td>
  <td><%= book.body %></td>
      <th>
         <% if book.favorited_by?(current_user) %>
           <p>
           <%= link_to book_favorites_path(book), method: :delete do %>
            ♥<%= book.favorites.count %> いいね
           <% end %>
           </p>
         <% else %>
           <p>
           <%= link_to book_favorites_path(book), method: :post do %>
            ♡<%= book.favorites.count %> いいね
           <% end %>
           </p>
         <% end %>
      </th>

      <th>
       <p><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></p>
      </th>
  </tr>
  <% end %>

  </table>
</div>
</div>
</div>