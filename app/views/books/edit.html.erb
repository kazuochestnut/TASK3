<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
             
                <% if @book.errors.any? %>
                <div id="error_explanation" class="error">
                  <h2><%= pluralize(@book.errors.count, "error") %>
                  prohibited this book from being saved:</h2>
            
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
            
            <h1>Editing Book</h1>
            
            <%= form_with model:@book, local: true do |f| %>
              <h4>Title</h4>
              <%= f.text_field :title %>
              <h4>Body</h4>
              <%= f.text_area :body %>
              </br>
              <%= f.submit 'Update Book' , class:'btn btn-success' %>
              </br>
              <%= link_to "Show", book_path(@book), class:'btn btn-link' %>
              <%= link_to "Back", books_path, class:'btn btn-link' %>
              <% end %>
            
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>