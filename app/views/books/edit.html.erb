<div class="container">
<div class="row">
<div class="col-lg-2"></div>
<div class="col-lg-8">
<h1>Editing Book</h1>
<table class="table">
 <%= form_with model:@book, local: true do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation" class="notice">
      <h2><%= pluralize(@book.errors.count, "error") %>
      prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
 <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
  <% end %>
</table>
</div>
<div class="col-lg-2"></div>
</div>
</div>