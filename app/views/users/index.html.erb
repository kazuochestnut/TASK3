

<div class="container">
 <div class="row">
   <div class="col-md-3">
    <%= render 'users/list', user: @user %>
    <%= render 'books/list', book: @book %>

   </div>

   <div class="col-md-8 offset-md-1">
     <h3>Users</h3>
     <table class="table table-striped">
       <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
       </tr>

       <% @users.each do |user|%>
       <tr>
       <td>
         <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
       </td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) , class:'btn btn-link' %></td>
       </tr>
       <% end %>
     </table>
  </div>
 </div>
</div>