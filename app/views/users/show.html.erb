<div class="notice"><%= flash[:complete] %></div>

<div class="container">
  <div class="row">
      <div class="col-md-3">

        <%= render 'users/list', user: @user %>
        <%= render 'books/list', book: @book %>

      </div>

      <div class="col-md-8 offset-md-1">
       <h3>Books</h3>
          <table class="table table-striped">
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            </tr>

            <% @books.each do |book|%>
              <tr>
              <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x'%>
              <% end %>
              </td>
              <td><%= link_to book.title , book_path(book.id) , class:'btn btn-link' %></td>
              <td><%= book.body %></td>
               <td><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></td>
              </tr>
            <% end %>
          </table>
      </div>
  </div>
</div>