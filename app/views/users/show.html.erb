<div class="notice"><%= flash[:complete] %></div>

<div class="container">
<div class="row">
<div class="col-lg-4">

<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>

</div>

<div class="col-lg-8">
 <h3>Books</h3>
  <table class="table table-striped">
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  </tr>

  <% @books.each do |book|%> 
  <tr>
  <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%></td>
  <td><%= link_to book.title , book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
  <% end %>
  </table>
</div>
</div>
</div>